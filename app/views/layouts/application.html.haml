%html
  %head
    %title Ask Me, Please
    = stylesheet_link_tag 'common'
    = javascript_include_tag 'jquery.min', 'rails', 'jquery.corner', 'jquery.counter', 'application'
    = csrf_meta_tag

  %body
    #container
      #header
        %ul#menu
          %li= link_to_unless_current t('questions.menu.new'), new_question_path
          %li= link_to_unless_current t('questions.menu.queue'), queue_questions_path
          %li= link_to_unless_current t('questions.menu.answered'), answered_questions_path
          %li= link_to_unless_current t('questions.menu.search'), search_questions_path

      -if flash.key?(:notice)
        #flash.notice= flash[:notice]
      -elsif flash.key?(:alert)
        #flash.alert= flash[:alert]

      #content
        = yield
        #credits
