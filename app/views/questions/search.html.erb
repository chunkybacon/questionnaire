<%= simple_form_for(:search, :html => {:method => :get}) do |f| %>

  <%= f.input :query %>

  <div class="actions">
    <%= f.submit t('.submit') %>
  </div>

  <div class="advanced">
    <div class="select">
      <label><%= t('.match_mode') %></label>
      <%= f.select :match_mode, match_mode_options %>
    </div>

    <div class="select">
      <label><%= t('.order_mode') %></label>
      <%= f.select :order_mode, order_mode_options %>
    </div>

  </div>

<% end %>

<div class="questions search">

  <% if @search && @search.errors.empty? %>

    <% if @questions.blank? %>
      <div class="empty"><%= t('.empty') %></div>
    <% else %>
      <div class="totals"><%= t('.totals', :count => @questions.total_entries) %></div>
      <%= render :partial => 'search', :collection => @questions, :as => :question %>
      <%= will_paginate(@questions) %>
    <% end %>

  <% elsif @search %>
    <div class="errors">
      <% @search.errors.each do |_, message| %>
        <span class="error"><%= message %></span><br/>
      <% end %>
    </div>
  <% else %>
    <div class="empty"><%= t('.pre') %></div>
  <% end %>

</div>
